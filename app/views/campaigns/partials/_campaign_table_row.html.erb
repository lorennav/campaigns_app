<tr id="tr-<%= campaign.id %>" data-controller="modal" data-action="click->modal#open" data-modal-url-value="<%= campaign_path(campaign) %>" class="cursor-pointer hover:bg-gray-100">
  <th class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 text-left text-blueGray-700 ">
    <%= campaign.humanized_title %>
  </th>
  <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
    <span class="inline-block whitespace-nowrap rounded-full <%= state_badge(campaign)%>"><%= campaign.humanized_state %></span>
  </td>
</tr>
